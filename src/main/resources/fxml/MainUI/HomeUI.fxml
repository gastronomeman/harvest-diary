<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="HomeUI" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.HarvestDiary.UiController.MainUI.HomeUiController">
    <children>
        <GridPane alignment="CENTER" prefHeight="130.0" prefWidth="720.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox alignment="CENTER" prefHeight="50.0" prefWidth="360.0" GridPane.columnIndex="1"
                      GridPane.columnSpan="2">
                    <children>
                        <DatePicker prefHeight="25.0" prefWidth="180.0">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </DatePicker>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="50.0" prefWidth="360.0" GridPane.columnIndex="1"
                      GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <children>
                        <Label text="冬至十二" textFill="#fc6315">
                            <font>
                                <Font name="System Bold" size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="180.0" GridPane.columnIndex="3"
                      GridPane.rowIndex="1">
                    <children>
                        <Label text="天气：">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </GridPane>
        <StackPane prefHeight="270.0" prefWidth="480.0">
            <children>
                <ImageView fitHeight="270.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true"/>
                <Label prefHeight="270.0" prefWidth="480.0" style="-fx-border-color: red; -fx-border-radius: 20;"
                       text=" "/>
            </children>
        </StackPane>
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="480.0">
            <children>
                <JFXButton prefHeight="45.0" prefWidth="350.0"
                           style="-fx-border-radius: 20; -fx-border-color: red; -fx-background-radius: 20;"
                           text="写日记"/>
            </children>
        </VBox>
    </children>
</VBox>
