<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="HomeUI" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="720.0"
      style="-fx-background-color: linear-gradient(to right, #94a6b1, #D5B4BA 50%, #61878A);"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.HarvestDiary.UiController.MainUI.HomeUiController">
    <children>
        <GridPane alignment="CENTER" prefHeight="130.0" prefWidth="720.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox alignment="CENTER" prefHeight="50.0" prefWidth="360.0" GridPane.columnIndex="1"
                      GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="chineseDate" text="冬月十二" textFill="#fc6315">
                            <font>
                                <Font name="System Bold" size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="180.0" GridPane.columnIndex="3"
                      GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="weather" text="天气：...">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="720.0" GridPane.columnSpan="4"
                      GridPane.rowIndex="2">
                    <children>
                        <Label fx:id="chineseYear" prefHeight="22.0" text="癸卯兔年">
                            <font>
                                <Font size="13.0"/>
                            </font>
                            <HBox.margin>
                                <Insets right="20.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="solarTerms24" prefHeight="22.0" text="冬至后，小寒前">
                            <font>
                                <Font size="13.0"/>
                            </font>
                            <HBox.margin>
                                <Insets right="20.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="festival" prefHeight="22.0" text="儿童节">
                            <font>
                                <Font size="13.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
                    <children>
                        <DatePicker fx:id="datePicker" layoutX="90.0" layoutY="15.0" prefHeight="25.0"
                                    prefWidth="180.0"/>
                        <JFXButton layoutX="275.0" layoutY="16.0" text="回到今天"/>
                    </children>
                </AnchorPane>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </GridPane>
        <GridPane prefHeight="270.0" prefWidth="720.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="240.0" prefWidth="240.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="240.0" prefWidth="240.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="90.0" minHeight="90.0" prefHeight="90.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="90.0" minHeight="90.0" prefHeight="90.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="90.0" minHeight="90.0" prefHeight="90.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <StackPane fx:id="imageBackground" maxHeight="270.0" maxWidth="480.0" minHeight="270.0" minWidth="480.0"
                           prefHeight="270.0" prefWidth="480.0" GridPane.columnIndex="1" GridPane.columnSpan="2"
                           GridPane.rowSpan="3">
                    <children>
                        <ImageView fx:id="pic" fitHeight="270.0" fitWidth="480.0" pickOnBounds="true">
                            <image>
                                <Image url="@../../image/MainUi/home/10002.jpg"/>
                            </image>
                        </ImageView>
                        <JFXButton prefHeight="270.0" prefWidth="480.0"
                                   style="-fx-border-radius: 15; -fx-background-radius: 15;" text=" ">
                            <StackPane.margin>
                                <Insets/>
                            </StackPane.margin>
                        </JFXButton>
                    </children>
                </StackPane>
                <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="120.0" GridPane.columnIndex="3"
                      GridPane.rowIndex="2">
                    <children>
                        <JFXButton fx:id="change" alignment="CENTER" contentDisplay="TOP" ellipsisString=""
                                   onMouseClicked="#changePic" prefHeight="50.0" prefWidth="70.0"
                                   style="-fx-background-color: rgba(255, 255, 255, 0.2);" text="换一换"
                                   textAlignment="CENTER">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </GridPane>
        <JFXButton prefHeight="45.0" prefWidth="350.0"
                   style="-fx-border-radius: 20; -fx-background-radius: 20; -fx-border-color: linear-gradient(to bottom RIGHT, #FAD9C2, #F3AC9E); -fx-background-color: rgba(255, 255, 255, 0.4);"
                   text="写日记">
            <VBox.margin>
                <Insets top="25.0"/>
            </VBox.margin>
        </JFXButton>
    </children>
</VBox>
